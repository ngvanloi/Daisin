@model ContactAddVM;
@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Add New Contact Us</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Contact" asp-action="GetContactList">Contact Us</a></li>
		<li class="breadcrumb-item active">Add</li>
	</ol>
</nav>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="Contact" asp-action="AddContact" method="post" class="row g-3">
			<div class="col-md-6">
				<div class="form-floating">
					<input asp-for="Location" type="text" class="form-control" placeholder="Your Location">
					<label asp-for="Location">Location</label>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-floating">
					<input asp-for="Email" type="text" class="form-control" placeholder="Your Email">
					<label asp-for="Email">Email</label>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-floating">
					<input asp-for="Call" type="text" class="form-control" placeholder="Your Call">
					<label asp-for="Call">Call</label>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-floating">
					<input asp-for="Map" type="text" class="form-control" placeholder="Your Map">
					<label asp-for="Map">Map</label>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form>

	</div>
</div>

