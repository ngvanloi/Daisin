@model PortfolioAddVM;
@{
	ViewData["Title"] = "AddPortfolio";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
	<img src="~/Admin/assets/img/card.jpg" class="card-img-top" alt="card image" />
	<div class="card-body">
		<h5 class="card-title">Card with an image on top</h5>
		<p class="card-text">Some quick example Some quick example Some quick example Some quick example Some quick example.</p>
	</div>
</div>

<div>
	<h5 class="card-title">Add New Portfolio</h5>

	<nav>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
			<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolio</a></li>
			<li class="breadcrumb-item active">Add</li>
		</ol>
	</nav>
</div>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio" method="post" class="row g-3" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="FileName" type="hidden" value="test filename" />
			<input asp-for="FileType" type="hidden" value="test filetype" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Title" type="text" class="form-control" placeholder="Your Title">
					<label asp-for="Title">Title</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Category.Name" type="text" class="form-control" placeholder="Your Category Name">
					<label asp-for="Category.Name">Category Name</label>
					<span asp-validation-for="Category.Name" class="text-danger"></span>
				</div>
			</div>

			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Photo" type="file" accept="image/*" class="form-control" placeholder="Photo">
					<span asp-validation-for="Photo" class="text-danger"></span>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form>

	</div>
</div>

