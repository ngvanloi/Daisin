@model CategoryUpdateVM;
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Update Category</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Category" asp-action="GetCategoryList">Categories</a></li>
		<li class="breadcrumb-item active">Update</li>
	</ol>
</nav>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" method="post" class="row g-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Id" type="hidden" />
			<input asp-for="RowVersion" type="hidden" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Name" type="text" class="form-control" placeholder="Your Name">
					<label asp-for="Name">Name</label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary px-3 py-2">Submit</button>
			</div>
		</form>

	</div>
</div>

