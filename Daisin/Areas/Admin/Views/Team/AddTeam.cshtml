@model TeamAddVM;
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Add New Team</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Team" asp-action="GetTeamList">Team</a></li>
		<li class="breadcrumb-item active">Add</li>
	</ol>
</nav>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="Team" asp-action="AddTeam" method="post" class="row g-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="FileName" type="hidden" value="test filename" />
			<input asp-for="FileType" type="hidden" value="test filetype" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="FullName" type="text" class="form-control" placeholder="Your FullName">
					<label asp-for="FullName">FullName</label>
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
			</div>
			
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Title" type="text" class="form-control" placeholder="Your Title">
					<label asp-for="Title">Title</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
			</div>

			<partial name="AddSocialMediaPartialView/_SocialMediaView" />

			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Photo" type="file" accept="image/*" class="form-control" placeholder="Photo">
					<span asp-validation-for="Photo" class="text-danger"></span>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form>

	</div>
</div>

