@model ServiceUpdateVM;
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Update Service</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Service" asp-action="GetServiceList">Services</a></li>
		<li class="breadcrumb-item active">Update</li>
	</ol>
</nav>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="Service" asp-action="UpdateService" method="post" class="row g-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Id" type="hidden" />
			<input asp-for="RowVersion" type="hidden" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Name" type="text" class="form-control" placeholder="Your Name">
					<label asp-for="Name">Name</label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>
			<div class="col-12">
				<div class="form-floating">
					<textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px;"></textarea>
					<label asp-for="Description">Description</label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Icon" type="text" class="form-control" placeholder="Your Icon">
					<label asp-for="Icon">Icon</label>
					<span asp-validation-for="Icon" class="text-danger"></span>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary">Submit</button>
				<button type="reset" class="btn btn-secondary">Reset</button>
			</div>
		</form>

	</div>
</div>

