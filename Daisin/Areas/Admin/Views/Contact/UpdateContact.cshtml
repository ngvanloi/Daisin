@model ContactUpdateVM;
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Update Contact Us</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Contact" asp-action="GetContactList">Contact Us</a></li>
		<li class="breadcrumb-item active">Update</li>
	</ol>
</nav>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="Contact" asp-action="UpdateContact" method="post" class="row g-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Id" type="hidden" />
			<input asp-for="RowVersion" type="hidden" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Location" type="text" class="form-control" placeholder="Your Location">
					<label asp-for="Location">Location</label>
					<span asp-validation-for="Location" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-floating">
					<input asp-for="Email" type="text" class="form-control" placeholder="Your Email">
					<label asp-for="Email">Email</label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-floating">
					<input asp-for="Call" type="text" class="form-control" placeholder="Your Call">
					<label asp-for="Call">Call</label>
					<span asp-validation-for="Call" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Map" type="text" class="form-control" placeholder="Your Map">
					<label asp-for="Map">Map</label>
					<span asp-validation-for="Map" class="text-danger"></span>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary px-3 py-2">Submit</button>
			</div>
		</form>

	</div>
</div>


