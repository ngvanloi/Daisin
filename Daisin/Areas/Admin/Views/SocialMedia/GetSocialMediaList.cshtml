@model List<SocialMediaListVM>;
@{
    ViewData["Title"] = "GetSocialMediaList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">SocialMedia</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active">SocialMedia</li>
	</ol>
</nav>

<div class="card">
	<div class="card-body">

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Twitter</th>
					<th scope="col">Linkedin</th>
					<th scope="col">Facebook</th>
					<th scope="col">Instagram</th>
					<th scope="col">Created Date</th>
					<th scope="col">Updated Date</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Twitter</td>
						<td>@item.Linkedin</td>
						<td>@item.Facebook</td>
						<td>@item.Instagram</td>
						<td>@item.CreatedDate</td>
						<td>@item.UpdatedDate</td>
						<td>
							<a asp-area="Admin" asp-controller="SocialMedia" asp-action="UpdateSocialMedia" asp-route-id="@item.Id"
							   data-id="@item.Id" class="btn btn-info btn-sm">
								Edit
							</a>
						</td>
						<td>
							<a asp-area="Admin" asp-controller="SocialMedia" asp-action="DeleteSocialMedia" asp-route-id="@item.Id"
							   data-id="@item.Id" class="btn btn-danger btn-sm">
								Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>

<a asp-area="Admin" asp-controller="SocialMedia" asp-action="AddSocialMedia" class="btn btn-success btn-sm">
	Add Social Media
</a>

