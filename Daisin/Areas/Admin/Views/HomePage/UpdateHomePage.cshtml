@model HomePageUpdateVM;
@{
    ViewData["Title"] = "UpdateHomePage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Update Home Page</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomePage" asp-action="GetHomePageList">HomePage</a></li>
		<li class="breadcrumb-item active">Update</li>
	</ol>
</nav>
<div class="card">
	<div class="card-body">
		<form asp-area="Admin" asp-controller="HomePage" asp-action="UpdateHomePage" method="post" class="row g-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Id" type="hidden" />
			<input asp-for="RowVersion" type="hidden" />
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="Header" type="text" class="form-control" placeholder="Your Header">
					<label asp-for="Header">Header</label>
					<span asp-validation-for="Header" class="text-danger"></span>
				</div>
			</div>
			<div class="col-12">
				<div class="form-floating">
					<textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px;"></textarea>
					<label asp-for="Description">Description</label>
					<span asp-validation-for="Header" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-12">
				<div class="form-floating">
					<input asp-for="VideoLink" type="text" class="form-control" placeholder="Your Video Link">
					<label asp-for="VideoLink">Video Link</label>
					<span asp-validation-for="VideoLink" class="text-danger"></span>
				</div>
			</div>

			<div class="text-center">
				<button type="submit" class="btn btn-primary px-3 py-2">Submit</button>
			</div>
		</form>

	</div>
</div>

