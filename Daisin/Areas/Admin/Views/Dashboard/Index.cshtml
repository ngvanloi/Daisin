@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="section dashboard">
	<div class="row">
		<div class="col-xxl-4 col-md-6">
			<div class="card info-card sales-card">

				<div class="card-body">
					<h5 class="card-title">Services <span>| All Time</span></h5>

					<div class="d-flex align-items-center">
						<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
							<i class="bi bi-gear"></i>
						</div>
						<div class="ps-3">
							<h6>@ViewBag.Services</h6>
							<span class="text-muted small pt-2 ps-1">Available services</span>

						</div>
					</div>
				</div>

			</div>
		</div>
		<div class="col-xxl-4 col-md-6">
			<div class="card info-card revenue-card">

				<div class="card-body">
					<h5 class="card-title">Team Members<span>| All Time</span></h5>

					<div class="d-flex align-items-center">
						<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
							<i class="bi bi-people"></i>
						</div>
						<div class="ps-3">
							<h6>@ViewBag.Teams</h6>
							 <span class="text-muted small pt-2 ps-1">Available Team members</span>

						</div>
					</div>
				</div>

			</div>
		</div>
		<div class="col-xxl-4 col-md-6">

			<div class="card info-card customers-card">

				<div class="card-body">
					<h5 class="card-title">Testimonals <span>| All Time</span></h5>

					<div class="d-flex align-items-center">
						<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
							<i class="bi bi-chat-left-dots"></i>
						</div>
						<div class="ps-3">
							<h6>@ViewBag.Testimonals</h6>
							<span class="text-muted small pt-2 ps-1">testimonals we have</span>

						</div>
					</div>

				</div>
			</div>

		</div>

		<div class="col-xxl-4 col-md-6">

			<div class="card info-card customers-card">

				<div class="card-body">
					<h5 class="card-title">Categories <span>| All Time</span></h5>

					<div class="d-flex align-items-center">
						<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
							<i class="bi bi-tags"></i>
						</div>
						<div class="ps-3">
							<h6>@ViewBag.Categories</h6>
							<span class="text-muted small pt-2 ps-1">Difference categories we have</span>
						</div>
					</div>

				</div>
			</div>

		</div
		>
		<div class="col-xxl-4 col-md-6">

			<div class="card info-card customers-card">

				<div class="card-body">
					<h5 class="card-title">Portfolio <span>| All Time</span></h5>

					<div class="d-flex align-items-center">
						<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
							<i class="bi bi-image-fill"></i>
						</div>
						<div class="ps-3">
							<h6>@ViewBag.Portfolios</h6>
							<span class="text-muted small pt-2 ps-1">Portfolio we have</span>

						</div>
					</div>

				</div>
			</div>

		</div>
		<div class="col-xxl-4 col-md-6">

			<div class="card info-card customers-card">

				<div class="card-body">
					<h5 class="card-title">Customers <span>| All Time</span></h5>

					<div class="d-flex align-items-center">
						<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
							<i class="bi bi-person-bouding-box"></i>
						</div>
						<div class="ps-3">
							<h6>@ViewBag.Users</h6>
							 <span class="text-muted small pt-2 ps-1">Customers worked with us</span>

						</div>
					</div>

				</div>
			</div>

		</div>
	</div>
</section>

