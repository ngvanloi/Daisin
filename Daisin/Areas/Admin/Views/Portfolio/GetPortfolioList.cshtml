@model List<PortfolioListVM>;
@{
    ViewData["Title"] = "GetPortfolioList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">Portfolio</h5>

<nav>
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item active">Portfolio</li>
	</ol>
</nav>

<div class="card">
	<div class="card-body">

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Title</th>
					<th scope="col">Category</th>
					<th scope="col">Created Date</th>
					<th scope="col">Updated Date</th>
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Title</td>
						<td>@item.Category.Name</td>
						<td>@item.CreatedDate</td>
						<td>@item.UpdatedDate</td>
						<td>
							<a asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" asp-route-id="@item.Id"
							   data-id="@item.Id" class="btn btn-info btn-sm">
								Edit
							</a>
						</td>
						<td>
							<a asp-area="Admin" asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-id="@item.Id"
							   data-id="@item.Id" class="btn btn-danger btn-sm">
								Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>

<a asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio" class="btn btn-success btn-sm">
	Add Portfolio
</a>

